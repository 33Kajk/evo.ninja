{
  "name": "root",
  "private": true,
  "workspaces": [
    "./packages/**"
  ],
  "scripts": {
    "start": "yarn workspace evo-ninja run start",
    "reset": "yarn clean && yarn && yarn build",
    "clean": "npx rimraf ./**/node_modules ./**/yarn.lock ./**/build ./**/coverage ./**/.polywrap",
    "build": "yarn build:core && yarn build:cli && yarn build:ui",
    "build:core": "yarn workspace @evo-ninja/core run build",
    "build:cli": "yarn workspace evo-ninja run build",
    "build:ui": "yarn workspace @evo-ninja/ui run build"
  }
}
